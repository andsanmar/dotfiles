	ramp-volume-0 = 
	ramp-volume-1 = 
	ramp-volume-2 = 
	ramp-volume-3 = 

[module/memory]
	type = internal/memory
	interval = 2
	format-prefix = " "
	format-prefix-foreground = ${colors.primary}
	label = %percentage_used%%

