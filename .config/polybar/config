[colors]
background = #1d1f21
background-alt = #373b41
foreground = #c5c8c6
foreground-alt = #969896
primary = #FFFFFF
secondary = #e60053
alert = #bd2c40

[bar/base]
  width = 100%
  height = 20
  ;radius = 6.0
  fixed-center = false

  enable-ipc = true

  background = ${colors.background}
  foreground = ${colors.foreground}

  line-size = 2
  line-color = #f00

  border-size = 0
  border-color = #00000000

  padding-left = 2
  padding-right = 2

  module-margin-left = 5
  module-margin-right = 0

  font-0 = fixed:pixelsize=9;1
  font-1 = MaterialIcons:size=9;1
  font-2 = FontAwesome:size=9:antialias=true;3
  font-3 = fixed:pixelsize=9:weight=bold;1:

  modules-left = i3
  modules-center = xwindow
  modules-right = spotify pomo volume wlan eth battery date

  tray-position = right
  tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title%
#label = %title:0:30:...%

[module/i3]
  type = internal/i3
  format = <label-state> <label-mode>
  index-sort = true
  wrapping-scroll = false

  label-mode-padding = 2
  label-mode-foreground = #000
  label-mode-background = ${colors.primary}

  label-focused = %index% %icon%
  label-focused-background = ${colors.background-alt}
  label-focused-underline = ${colors.primary}
  label-focused-padding = 2

  label-unfocused = %index% %icon%
  label-unfocused-padding = 2

  label-visible = V %index%
  label-visible-background = ${self.label-focused-background}
  label-visible-underline = ${self.label-focused-background}
  label-visible-padding = ${self.label-focused-padding}

  label-urgent = %index%!
  label-urgent-background = ${colors.alert}
  label-urgent-padding = 2

  ; TODO: finish icons
  # ws-icon-0 = 1;
  # ws-icon-1 = 2;
  # ws-icon-2 = 3;
  # ws-icon-3 = 4;

